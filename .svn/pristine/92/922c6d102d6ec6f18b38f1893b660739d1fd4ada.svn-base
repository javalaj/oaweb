<%@ page contentType="text/html;charset=UTF-8" %>
<%@ include file="/WEB-INF/views/include/taglib.jsp"%>
<html>
<head>
	<title>人员入职信息管理</title>
	<meta name="decorator" content="default"/>
	<script type="text/javascript">
		
		$(document).ready(function() {
		});
		function page(n,s){
			$("#pageNo").val(n);
			$("#pageSize").val(s);
			$("#searchForm").submit();
        	return false;
        }
		
		function resetForm(){
			resetSelection("sex","sex");
			resetSelection("status","oa_emp_join_status");
        }
		
		function resetSelection(id,typex){
			$("#"+id).val("");
			$("#s2id_"+id).children("a").children("span.select2-chosen").html("全部");
			$("#"+id).empty();
			$("#"+id).append("<option value=\"\" selected=\"selected\">全部</option>");
			$.ajax({
				type: "POST",
				url: "${ctx}/sys/dict/getDictList",
				data: {type:typex},
				dataType: 'json',
				success: function(data){
					for(var i=0;i<data.length;i++)  
					{  
						$("#"+id).append("<option value=\""+data[i].value+"\">"+data[i].label+"</option>");
					}
				}
			});
		}
	</script>
</head>
<body style="padding: 0px"  class="gray-bg">
	<div class="wrapper wrapper-content">
		<div class="ibox">
			<div class="ibox-title">
				<h5>人员入职申请列表</h5>
				<div class="ibox-tools">
				</div>
			</div>
			<div class="ibox-content">
				<div class="row">
					<div class="col-sm-12">
						<form:form id="searchForm" modelAttribute="oaEmpJoinApproval" action="${ctx}/oa/emp/oaEmpJoinApproval/" method="post" class="form-inline">
							<input id="pageNo" name="pageNo" type="hidden" value="${page.pageNo}"/>
							<input id="pageSize" name="pageSize" type="hidden" value="${page.pageSize}"/>
							<div class="form-group">
								<label>姓名：
									<form:input path="empName" htmlEscape="false" maxlength="64" class="form-control"/>
								</label>
								<label>性别：
									<form:select path="sex" class="selectpicker " data-style="btn-inverse" data-live-search="true" id="sex">
										<form:option value="" label="全部"/>
										<form:options items="${fns:getDictList('sex')}" itemLabel="label" itemValue="value" htmlEscape="false"/>
									</form:select>
								</label>
								<label>职称：
									<form:input path="title" htmlEscape="false" maxlength="64" class="form-control"/>
								</label>
								<label>归属部门：
									<sys:treeselect id="office" name="office.id" value="${oaEmpJoinApproval.office.id}" labelName="office.name" labelValue="${oaEmpJoinApproval.office.name}"
										title="部门" url="/sys/office/treeData?type=2" cssClass="form-control" allowClear="true" notAllowSelectParent="true"/>
								</label>
								<label>职务：
									<form:input path="duty" htmlEscape="false" maxlength="64" class="form-control"/>
								</label>
								<label>入职时间：
									<input name="beginEntryTime" type="text" readonly="readonly" maxlength="20" class="Wdate laydate-icon form-control layer-date input-sm"
										value="<fmt:formatDate value="${oaEmpJoinApproval.beginEntryTime}" pattern="yyyy-MM-dd HH:mm:ss"/>"
										onclick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss',isShowClear:false});"/> - 
									<input name="endEntryTime" type="text" readonly="readonly" maxlength="20" class="Wdate laydate-icon form-control layer-date input-sm"
										value="<fmt:formatDate value="${oaEmpJoinApproval.endEntryTime}" pattern="yyyy-MM-dd HH:mm:ss"/>"
										onclick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss',isShowClear:false});"/>
								</label>
								<label>审批状态：
									<form:select path="status" class="selectpicker " data-style="btn-inverse" data-live-search="true" id="status">
										<form:option value="" label="全部"/>
										<form:options items="${fns:getDictList('oa_emp_join_status')}" itemLabel="label" itemValue="value" htmlEscape="false"/>
									</form:select>
								</label>
							</div>
						</form:form>
						<sys:message content="${message}"/>
						<!-- 工具栏 -->
						<div class="row">
							<div class="col-sm-12">
								<div class="pull-left">
									<shiro:hasPermission name="oa:emp:oaEmpJoinApproval:edit">
										<a href="${ctx}/oa/emp/oaEmpJoinApproval/form"
													class="btn btn-white btn-sm"><i class="fa fa-plus"></i>添加</a> 
									</shiro:hasPermission> 	
								</div>
								<div class="pull-right">
									<button class="btn btn-primary btn-rounded btn-outline btn-sm "
										onclick="search()">
										<i class="fa fa-search"></i> 查询
									</button>
									<button id="btnReset" class="btn btn-primary btn-rounded btn-outline btn-sm "
										onclick="reset();">
										<i class="fa fa-refresh"></i> 重置
									</button>
								</div>
							</div>
						</div>	
						<table id="contentTable" class="table table-striped table-bordered table-hover table-condensed dataTables-example dataTable">
							<thead>
								<tr>
									<th>序号</th>
									<th>姓名</th>
									<th>性别</th>
									<th>职称</th>
									<th>归属部门</th>
									<th>职务</th>
									<th>入职时间</th>
									<th>审批状态</th>
									<th>操作</th>
								</tr>
							</thead>
							<tbody>
							<c:forEach items="${page.list}" var="oaEmpJoinApproval" varStatus="status">
								<tr>
									<td>
										${status.count}
									</td>
									<td>
										${oaEmpJoinApproval.empName}
									</td>
									<td>
										${fns:getDictLabel(oaEmpJoinApproval.sex, 'sex', '')}
									</td>
									<td>
										${oaEmpJoinApproval.title}
									</td>
									<td>
										${oaEmpJoinApproval.office.name}
									</td>
									<td>
										${oaEmpJoinApproval.duty}
									</td>
									<td>
										<fmt:formatDate value="${oaEmpJoinApproval.entryTime}" pattern="yyyy-MM-dd HH:mm:ss"/>
									</td>
									<td>
										${fns:getDictLabel(oaEmpJoinApproval.status, 'oa_emp_join_status', '')}
									</td>
									<td>
										<shiro:hasPermission name="oa:emp:oaEmpJoinApproval:edit">
						    				<a href="${ctx}/oa/emp/oaEmpJoinApproval/form?id=${oaEmpJoinApproval.id}" 
													class="btn ${oaEmpJoinApproval.status eq '0'?'btn-success':'btn-info'} btn-xs"><i class="fa-edit"></i>${oaEmpJoinApproval.status eq '0'?'修改':'查看'}</a>
										</shiro:hasPermission>
									</td>
								</tr>
							</c:forEach>
							</tbody>
						</table>
						<table:page page="${page}"></table:page>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>