	// 通过工作时间获取 工作年限
	public String getWorkYear() {
		
		try {

			int year=new Date().getYear()-indate.getYear();
			int month=(new Date().getMonth()+1)- (indate.getMonth()+1);
			if(year>0){
				int workYear1=year*12+month;
				workYear1= workYear1/12;
				workYear=""+workYear1;
			}else{
				workYear="不满一年";
			}
			
		} catch (Exception e) {
			// TODO: handle exception
		}
		
		return workYear;
	}
	//通过合同起始时间 获取合同年限
	public String getContractTime() {		
