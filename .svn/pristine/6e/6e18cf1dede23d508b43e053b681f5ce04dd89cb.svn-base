	//删除一行事件
	function del1line(item) {
		$(item).next().val("1");
		$(item).parent().parent().hide();
		return false;
	}
	//工作内容兰，为空控制
	function notnull() {
		var judge = true;
		$("select[name=type]")
				.each(
						function() {
							if (!$(this).is(":hidden")
									&& ($(this).val() == '0' || $(this).val() == '3')) {
								if ($(this).parent().next().children().val()
										.trim() == '') {
									//上班，出差
									$(this).parent().next().children()
											.addClass("redBorder");
									judge = false;
								} else {
									//请假，调休
									$(this).parent().next().children()
											.removeClass("redBorder");
								}
							}
						});
		return judge;
	}
	//日志日期
	function judge22() {
		if ($("input[name='workdate']").val().trim() == "") {
			$("input[name='workdate']").addClass("redBorder");
			return false;
		} else {
			$("input[name='workdate']").removeClass("redBorder");
			return true;
		}
	}
	//时间大小非空控制
	function judge() {
		var judge = true;
		var qianStr = "2017-03-08 ";
		var houStr = ":00";
		var str1 = "";
		var str2 = "";
		var i = 1;
		$("input[name$='time']").each(function() {
			if (!$(this).is(":hidden")) {
				//为空
				if ($(this).val() == "") {
					judge = false;
					$(this).addClass("redBorder");
				} else {
					$(this).removeClass("redBorder");
				}
				//分类赋值
				if ($(this).attr("name") == "begintime") {
					str1 = $(this).val();
				} else {
					str2 = $(this).val();
				}
				//alert(str1+" - "+str2);
				//前后时间都不为空
				if (str1 != "" && str2 != "") {
					//后面时间比前面时间小
					var date1 = (qianStr + str1 + houStr);
					var date2 = (qianStr + str2 + houStr);
					//	alert(date1+""+date2);
					if (date1 > date2) {
						judge = false;
						$(this).addClass("redBorder");
					} else {
						$(this).removeClass("redBorder");
					}
				}
				//每两次重置时间
				if (i % 2 == 0) {
					str1 = "";
					str2 = "";
				}
				//累加
				i++;
			}
		});
		return judge;
	}
