<%@ page contentType="text/html;charset=UTF-8"%>
<%@ include file="/WEB-INF/views/include/taglib.jsp"%>
<!doctype html>
<html lang="zh-cn">
<head>
<meta charset="utf-8">
<meta name="decorator" content="default" />
<meta name="viewport"
	content="width=device-width,initial-scale=1,user-scalable=no" />
<title>公司发文</title>
<link rel="stylesheet" href="${ctxStatic}/mobile/css/mui.css" />
<link rel="stylesheet" href="${ctxStatic}/mobile/css/oabase.css" />
<link rel="stylesheet" type="text/css"
	href="${ctxStatic}/mobile/css/overwrite-mui.css" />

<style type="text/css">
.mui-scroll-wrapper {
	position: absolute;
	z-index: 2;
	top: 97px;
	bottom: 50px;
	left: 0;   
	width: 100%;
}

#searchForm {background-color:#f5f5f5;
	margin: 0;
	padding: 0;
}

.form-left {
	width: 25%;
}

.date-li {
	width: 67% !important;
}

.mui-date[name=beginDate] {
	width: 45% !important;
}

.mui-date[name=endDate] {
	width: 45% !important;
	float: right;
}

.bottom-button {
	padding: 5px 0;
}

.mid-font {
	text-align: center;
	width: auto;
}
.mui-segmented-control{
	    border: 1px solid #12b7f5;
}

.mui-segmented-control .mui-control-item.mui-active{
	background-color: #12b7f5;
}

.mui-segmented-control .mui-control-item{
	color: #12b7f5;
    border-color: #12b7f5;
    border-left: 1px solid #12b7f5;
}
.btn-submit{
	    background-color: #12b7f5;
    border: 1px solid #12b7f5;
}
</style>
<script type="text/javascript">
	window.onload = function() {
		mui.init();
		(function($) {
			$('.mui-scroll-wrapper').scroll({
				indicators : true
			//是否显示滚动条
			});
		})(mui);
	}
	function page(n, s) {
		$("#pageNo").val(n);
		$("#pageSize").val(s);
		$("#searchForm").submit();
		return false;
	}
</script>
</head>
<body class="teamwork">
	<div class="mui-content">
		<div class="team-header">
			<div id="segmentedControl"
				class="mui-segmented-control mui-segmented-control-primary">
				<a class="mui-control-item" id="signlist">签报</a> <a
					class="mui-control-item mui-active" id="archiveslist">发文</a> <a
					class="mui-control-item" id="receivefilelist">收文</a>

			</div>
		</div>
		<div class="main-tit teamtask-tit">
			<span>公司发文</span> <a class="mui-pull-left" id="searchsylist"><span
				class="mui-icon mui-icon-search"></span></a>
		</div>
		<div id="query" class="mui-content" style="display: none;">
			<form:form id="searchForm" modelAttribute="act" class="search-form"
				action="${ctx}/m/oa/oaArchives">
				<input id="pageNo" name="pageNo" type="hidden"
					value="${page.pageNo}" />
				<input id="pageSize" name="pageSize" type="hidden"
					value="${page.pageSize}" />
				<ul class="userinfo-edit search-edit">
					<li><label class="form-left">关键字:</label><input name="title"
						type="text" maxlength="255" /></li>
					<li>
						<div class="bottom-button">
							<button type="reset" class="btnapp btn-next"
								data-loading-text="取消中">清空</button>
							<button type="submit" class="btnapp btn-submit"
								data-loading-text="提交中">搜索</button>
						</div>
					</li>
				</ul>
			</form:form>
		</div>
		<div class="mui-scroll-wrapper">
			<div class=" mui-scroll">
				<ul class="mui-table-view ">
					<c:forEach items="${page.list}" var="archives">
						<li class="mui-table-view-cell mui-media"><a href="#"> <!-- <div class="teamtask-icon"><img class="mui-media-object mui-pull-left" src="#" alt="协同消息" /></div> -->
								<div class="mui-media-body">
									<span class="msg-type">${archives.createBy.name}</span> <span
										class="mui-pull-right"><fmt:formatDate
											value="${archives.createDate}" pattern="yyyy-MM-dd " /> </span>
									<p class="mui-ellipsis msg-title">
										<span>${archives.title}</span> <span class="mui-pull-right"><c:choose>
												<c:when test="${archives.isdraft == 0 }">
									未提交
								</c:when>
												<c:when test="${archives.isdraft == 1 }">
									审核中
								</c:when>
												<c:otherwise>
													<span style="color: red;">已完结</span>
												</c:otherwise>
											</c:choose></span>
									</p>
								</div>
						</a></li>
					</c:forEach>
					<li class="mui-table-view-cell">
						<p>
							<table:pageMobile id="myPage" page="${page}" showPageOne="false"></table:pageMobile>
						</p>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<script src="${ctxStatic}/mobile/js/mui.min.js"></script>
	<script src="${ctxStatic}/mobile/js/mobile.js"></script>
	<jsp:include page="/WEB-INF/views/mobile/modules/sys/foot.jsp"></jsp:include>
	<script type="text/javascript">
		$(document)
				.ready(
						function() {

							mui.init();
							document.getElementById('searchsylist')
									.addEventListener('tap', function() {
										//点击响应逻辑  
										console.log("1");
										searchsy();
									});

							document.getElementById('signlist')
									.addEventListener('tap', function() {
										sign();
									});

							document.getElementById('archiveslist')
									.addEventListener('tap', function() {
										archives();
									});

							document.getElementById('receivefilelist')
									.addEventListener('tap', function() {
										receivefile();
									});

							function searchsy() {
								if ($("#query").css("display") == 'none') {
									//97+100
									//修改查询框宽度是100的值要改变
									$(".mui-scroll-wrapper")
											.css("top", "197px");
								} else {
									$(".mui-scroll-wrapper").css("top", "97px");
								}
								document.getElementById('query').style.display = document
										.getElementById('query').style.display == 'none' ? 'block'
										: 'none';
							}

							function sign() {
								location.href = "${mctx}/oa/sign/oaSign/";
							}
							function archives() {
								location.href = "${mctx }/oa/oaArchives/";
							}
							function receivefile() {
								location.href = "${mctx }/oa/oaReceiveFile/";
							}

						});
	</script>
</body>
</html>
