.divcontent {
	width: 100%;
	background-color: #fff;
	border-bottom: 1px solid #ddd;
	font-size: 14px;
}

.divcontent li span:first-child {
	display: inline-block;
	width: 30%;
	font-weight: 700;
}

.divcontent input, textarea {
	width: 67%;
	margin-bottom: 0px;
	padding: 2px 6px !important;
}

.xin_select {
	width: 67% !important;
	margin-bottom: 0px;
	padding: 0 6px !important;
	height: 32px;
}

.exam {
	text-align: left;
	margin-left: 5% !important;
	width: 20px !important;
}

.divtitle {
	width: 100%;
	text-align: center;
	height: 36px;
	line-height: 36px;
	background-color: #f6f6f6;
}

.xinfoot {
	background-color: #f8f8f8;
	padding: 10px 0;
	/* margin-bottom: 50px !important; */
}

.xinfoot li {
	padding: 0 15px;
}

.contents_title2 {
	margin-top: 10px;
	width: 100%;
	border: 1px solid #ddd;
	border-radius: 3px;
	min-height: 50px;
	background-color: #fff;
	overflow: hidden;
}

.content_img {
	width: 10%;
	float: left;
	text-align: center;
	padding: 10px 0px;
	box-sizing: border-box;
}

.content_img img {
	margin: 5px auto;
}

.content_title {
	padding: 10px 0px;
	box-sizing: border-box;
	width: 60%;
	height: 50px;
	float: left;
}

.content_title h3 {
	font-size: 1.5rem;
	line-height: 15px;
	color: #333333;
}

.content_title span {
	font-size: 1.3rem;
	line-height: 15px;
	color: #666666;
}

.content_time {
	padding: 5px 0px;
	box-sizing: border-box;
	float: left;
	width: 30%;
}

.content_time span {
	font-size: 1.2rem;
	color: #666666;
}

.bottom_button {
	float: left;
	width: 100%;
}


.bottom_button .form-button {
	text-align: center;
	margin: 10px 0;
	margin-left: 25%;
	width: 50%;
}

.bottom_button .form-button2 {
	float:left;
	text-align: center;
	margin: 10px 10%;
	width: 29%;
}

.spcon {
	margin-left: 5px;
}

.bottoms span {
	color: #fff;
}

.xinmsg {
	margin-top: 5px;
	width: 100%;
	padding-left: 41px;
	padding-right: 5px;
	font-size: 0.5em;
	float: left;
}

.textgp {
	vertical-align: top;
}
